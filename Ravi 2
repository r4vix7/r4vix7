  <style>
    /* Basic CSS to style the background and text */
    body {
      margin: 0;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      background: #000;
      overflow: hidden;
    }

    .container {
      text-align: center;
      color: #ffcc00;
      font-family: Arial, sans-serif;
    }

    .message {
      font-size: 2em;
      font-weight: bold;
      animation: glow 1.5s ease-in-out infinite alternate;
    }

    /* Firework Animation */
    .firework {
      width: 4px;
      height: 20px;
      position: absolute;
      bottom: 0;
      background: #ffcc00;
      animation: firework 2s linear infinite;
      transform-origin: bottom center;
    }

    @keyframes firework {
      0% { opacity: 1; transform: translateY(0) scaleY(1); }
      80% { opacity: 0; transform: translateY(-100vh) scaleY(0.1); }
    }

    @keyframes glow {
      from { text-shadow: 0 0 10px #ffcc00, 0 0 20px #ffcc00; }
      to { text-shadow: 0 0 20px #ff6600, 0 0 30px #ff6600; }
    }
  </style>
